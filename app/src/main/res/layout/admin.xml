<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".MainActivity"
    android:background="@drawable/m21">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_alignParentTop="true">
<LinearLayout
    android:layout_width="170dp"
    android:layout_height="175dp"
    android:layout_row="0"
    android:layout_column="0"
    android:orientation="vertical"
    android:background="#fc0303"
    android:id="@+id/bt1"
    android:onClick="ab">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:tint="#FFFFFF"
            android:layout_gravity="center"
            android:src="@drawable/ic_person_add_black_24dp"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Employee"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="15dp"/>
</LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_height="175dp"
            android:orientation="vertical"
            android:background="#bb06f7"
            android:id="@+id/bt2"
            android:layout_marginLeft="10dp"
            android:onClick="bc">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:tint="#FFFFFF"
                android:layout_gravity="center"
                android:src="@drawable/ic_person"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Empolyee"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="175dp"
            android:layout_row="1"
            android:layout_column="0"
            android:orientation="vertical"
            android:background="#2dfc03"
            android:id="@+id/bt3"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:tint="#FFFFFF"
                android:layout_gravity="center"
                android:src="@drawable/ic_emp_list"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Attendence"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="175dp"
            android:layout_row="1"
            android:layout_column="1"
            android:orientation="vertical"
            android:background="#03fcf8"
            android:id="@+id/bt4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:tint="#FFFFFF"
                android:layout_gravity="center"
                android:src="@drawable/ic_send_black_24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Notification"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </LinearLayout>

    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:background="#0f03fc"
        android:id="@+id/bt5"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:tint="#FFFFFF"
            android:layout_gravity="center"
            android:src="@drawable/ic_rate_review_black_24dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Reson"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="15dp"/>
    </LinearLayout>

</LinearLayout>